{
	"components": {
		"dataTable": {
		    "id":"table_01",
		    "version": "1.0.0",
		    "type": "Datatable",
		    "configuration": {
		        "datasource": {
		            "type_": "local",
		            "type": "managed",
		            "manager": "manager_01",
		            "uri": "/test/getRecords",
		            "method": "POST",
		            "payload": {},
		            "adapter": "@.data"
		        },
		        "maxHeight": 300,
		        "columns": [
		            {
		                "label": "Name",
		                "field": "name"
		            },
		            {
		                "label": "Age",
		                "field": "age"
		            },
		            {
		                "label": "Birthday",
		                "field": "birthday"
		            },
		            {
		                "label": "Customer",
		                "field": "isCustomer",
		                "type": "boolean"
		            },
		            {
		                "label": "Genre",
		                "field": "genre"
		            },
		            {
		                "label": "Type",
		                "field": "type"
		            },
		            {
		                "label": "Rank",
		                "field": "rank"
		            },
		            {
		                "label": "Actions",
		                "type": "rowActions",
		                "actions": [
		                    {
		                        "label": "Edit record",
		                        "actionId": "edit",
		                        "icon": "/uiTools/img/silk/computer_edit.png"
		                    },
		                    {
		                        "label": "Delete record",
		                        "actionId": "delete",
		                        "icon": "/uiTools/img/silk/computer_delete.png"
		                    }
		                ]
		            }
		        ]
		    }
		},
		"editor": {
		    "id":"editor_01",
		    "version": "1.0.0",
		    "type": "Editor",
		    "configuration": {
		        "height": 450,
		        "toolbar": {
		        	"position": "top",
		        	"actions": [
		        		{
		                    "label": "Save",
		                    "actionId": "saveSource",
		                    "icon": "/uiTools/img/silk/disk.png"
		                },
			    		{
			                "type": "separator"
			            },
		        		{
		                    "label": "Edit",
		                    "actionId": "editSource",
		                    "icon": "/uiTools/img/silk/page_edit.png"
		                }
		        	]
		        }
		    }
		},
		"dataManager": {
		    "id":"manager_01",
		    "version": "1.0.0",
		    "type": "DataManager",
		    "configuration": {
		    	"query": {
		    		"type": "local",
		    		"uri": "/test/getRecords",
		    		"payload": {"selector": {}},
		    		"method": "POST",
		            "adapter": "@.data"
		    	},
		    	"create": {
		    		"type": "local",
		    		"uri": "/test/record",
		    		"method": "POST",
		    		"payload": "@",
		            "adapter": "@.data"
		    	},
		    	"update": {
		    		"type": "local",
		    		"uri": "/test/record",
		    		"method": "PUT",
		    		"payload": "@",
		            "adapter": "@.data"
		    	},
		    	"delete": {
		    		"type": "local",
		    		"uri": "/test/record/@.id",
		    		"method": "DELETE",
		    		"payload": "{}",
		            "adapter": "@.data"
		    	}
		    }
		},
		"dialog": {
		    "id":"dialog_01",
		    "version": "1.0.0",
		    "type": "ModalDialog",
		    "configuration": {
		    	"title": "NPA-test Modal Dialog",
		    	"size": "XXL",
		    	"buttons": [
		    		{
		    			"label": "Cancel",
		    			"action": "cancel"
		    		},
		    		{
		    			"label": "Save",
		    			"action": "close"
		    		}
		    	]
		    }
		},
		"form.sample": {
		    "id":"form_01",
		    "version": "1.0.0",
		    "type": "Form",
		    "configuration": {
		    	"title": "Sample NPA UI form",
		    	"class": "form-frame-noborder",
		    	"fields": [
		    		{
		    			"name": "name",
		    			"label": "Name",
		    			"size": 8,
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "password",
		    			"label": "Password",
		    			"type": "password",
		    			"size": 7
		    		},
		    		{
		    			"name": "age",
		    			"label": "Age",
		    			"type": "integer",
		    			"default": 33,
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "birthday",
		    			"label": "Birthday",
		    			"type": "date"
		    		},
		    		{
		    			"name": "isCustomer",
		    			"label": "Customer",
		    			"type": "check",
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "genre",
		    			"label": "Genre",
		    			"type": "radio",
		    			"choices": [
		    				{"label": "Male","value": "male"},
		    				{"label": "Female","value": "female"},
		    				{"label": "Other","value": "-"}
		    			]
		    		},
		    		{
		    			"name": "favoriteColor",
		    			"label": "Color",
		    			"type": "color",
		    			"default": "#dae3f5",
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "rank",
		    			"label": "Rank",
		    			"type": "range",
		    			"default": 50,
		    			"min": 0,
		    			"max": 100,
		    			"step": 5,
		    			"size": 9,
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "type",
		    			"label": "Type",
		    			"type": "select",
		    			"size": 4,
		    			"values": ["Bronze","Silver","Gold"]
		    		},
		    		{
		    			"name": "custom",
		    			"label": "Customization",
		    			"type": "javascript",
		    			"height": 200
		    		},
		    		{
		    			"name": "comment",
		    			"label": "Comment",
		    			"type": "textarea",
		    			"size": 9
		    		},
		    		{
		    			"name": "dates",
		    			"label": "Dates",
		    			"type": "array"
		    		},
		    		{
		    			"name": "bulletin",
		    			"label": "Etat-civil",
		    			"type": "upload"
		    		},
		    		{
		    			"name": "validateBtn",
		    			"label": "Validate",
		    			"type": "button",
		    			"buttonType": "warning"
		    		},
		    		{
		    			"name": "footMail",
		    			"label": "Foot-Mail",
		    			"type": "richText"
		    		}
		    	]
		    }
		},
		"form": {
		    "id":"form_01",
		    "version": "1.0.0",
		    "type": "Form",
		    "configuration": {
		    	"title": "NPA Sample Record edition",
		    	"class": "form-frame-noborder",
		    	"fields": [
		    		{
		    			"name": "name",
		    			"label": "Customer Name",
		    			"required": true,
		    			"size": 8,
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "password",
		    			"label": "Password",
		    			"type": "password",
		    			"size": 4
		    		},
		    		{
		    			"name": "age",
		    			"label": "Age",
		    			"type": "integer",
		    			"required": true,
		    			"default": 33,
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "birthday",
		    			"label": "Birthday",
		    			"type": "date"
		    		},
		    		{
		    			"name": "isCustomer",
		    			"label": "Customer",
		    			"type": "check",
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "genre",
		    			"label": "Genre",
		    			"type": "radio",
		    			"choices": [
		    				{"label": "Male","value": "male"},
		    				{"label": "Female","value": "female"},
		    				{"label": "Other","value": "-"}
		    			]
		    		},
		    		{
		    			"name": "favoriteColor",
		    			"label": "Color",
		    			"type": "color",
		    			"default": "#dae3f5",
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "rank",
		    			"label": "Rank",
		    			"type": "range",
		    			"default": 50,
		    			"min": 0,
		    			"max": 100,
		    			"step": 5,
		    			"size": 9,
		    			"help": "Put here some helping info for this field"
		    		},
		    		{
		    			"name": "type",
		    			"label": "Type",
		    			"type": "select",
		    			"size": 4,
		    			"values": ["Bronze","Silver","Gold"]
		    		}
		    	]
		    }
		},
		"toolbar": {
		    "id":"toolbar_01",
		    "version": "1.0.0",
		    "type": "Toolbar",
		    "configuration": {
		    	"actions": [
		    		{
		                "label": "Print",
		                "actionId": "print",
		                "icon": "/uiTools/img/silk/printer.png"
		            },
		    		{
		                "type": "separator"
		            },
		    		{
		                "label": "Insert a new record",
		                "actionId": "insert",
		                "icon": "/uiTools/img/silk/table_row_insert.png"
		            },
		    		{
		                "label": "Edit the current record",
		                "actionId": "edit",
		                "icon": "/uiTools/img/silk/table_edit.png"
		            },
		    		{
		                "label": "Save the current record",
		                "actionId": "save",
		                "icon": "/uiTools/img/silk/disk.png"
		            },
		    		{
		                "type": "separator"
		            },
		    		{
		                "label": "Delete the current record",
		                "actionId": "delete",
		                "icon": "/uiTools/img/silk/table_row_delete.png"
		            }
		    	]
		    }
		}
	}
}